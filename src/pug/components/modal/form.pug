extends ../../layout/modal

block modalVariables
	- modalId = 'js-form-modal'
	- modalClasses = 'modal--form'

block modalContent
	button(
		class=['modal-close', 'ms-auto d-flex align-items-center']
		type='button'
		data-bs-dismiss='modal'
		aria-label='Закрыть'
	)
		+icon('close')

	form(class=['js-form-validate']).form__block#form-modal
		h2.form__block-title Подайте заявку на бесплатную консультацию
		.row
			.col-12
				+field({
					type: 'text',
					placeholder: 'Имя',
					classes: '',
					validate: true
				})
			.col-12
				+field({
					type: 'phone',
					placeholder: 'Телефон',
					classes: 'js-phone-mask',
					validate: true
				})
			.col-12
				+field({
					type: 'email',
					placeholder: 'Почта',
					classes: '',
				})
		.form__block-agreement
			.checkbox
				input(type="checkbox" name="agreement")
				span
				p.mb-0 Я даю согласие на обработку персональных данных в соответствии с #[a(href="#" class="text-danger") Политикой конфиденциальности]

		button(type="submit" class="button button-black")
			span Отправить
			.spinner-border.spinner-form(role='status')