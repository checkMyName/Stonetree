section.home__intro
  .home__intro-bg
    +lazyImage({
      imageSrc: 'img/home/home-bg',
      type: 'background',
      classes: 'w-100 h-100 home__intro-bg-img is-current js-intro-bg-element',
      imageClasses: 'w-100 h-100',
    })
    +lazyImage({
      imageSrc: 'img/home/consultation-bg',
      type: 'background',
      classes: 'w-100 h-100 home__intro-bg-img js-intro-bg-element',
      imageClasses: 'w-100 h-100',
    })
    +lazyImage({
      imageSrc: 'img/home/home-quiz-bg',
      type: 'background',
      classes: 'w-100 h-100 home__intro-bg-img js-intro-bg-element',
      imageClasses: 'w-100 h-100',
    })
  .container
    .home__intro-wrapper.element-animation
      .swiper.slider.js-home-intro-slider
        .swiper-wrapper
          each item, i in homeSliderElements
            .swiper-slide
              .home__intro-slider-slide-info
                if(i==0)
                  h1.home__intro-slider-slide-title #{item.title}
                else
                  h2.home__intro-slider-slide-title #{item.title}
                p.home__intro-slider-slide-desc #{item.desc}
                a(href=item.href class="button button-primary home__intro-slider-slide-button")
                  span Подробнее
              .home__intro-list
                each item in homeIntroList
                  .home__intro-item
                    p #{item.text}
                    +icon('angle')
        .slider__controlls
          .slider__pagination.slider__pagination--ver-1
            .slider__pagination-bullet
          .slider__navigation
            .slider__navigation-button.slider__navigation-button-prev
              +icon('arrow-down')
            .slider__navigation-button.slider__navigation-button-next
              +icon('arrow-down')

      form(class=['js-form-validate'] data-lang="ru").form__block#form-intro
        h2.form__block-title Подайте заявку на бесплатную консультацию
        .row
          .col-12
            +field({
              type: 'text',
              placeholder: 'Имя',
              classes: '',
              validate: true
            })
          .col-12
            +phoneField
