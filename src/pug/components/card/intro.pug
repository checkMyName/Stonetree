section.card__intro
  .card__intro-bg
    +lazyImage({
      imageSrc: 'img/card/card-bg',
      type: 'background',
      classes: 'w-100 h-100 card__intro-bg-img',
      imageClasses: 'w-100 h-100',
    })

  .container
    +breadcrumbs([
      {
        name: 'Главная',
        href: 'home.html'
      },
      {
        name:'Binghatti Hills'
      }
    ])

  .container

    .intro__wrapper
      .row.justify-content-between
        .col-12.col-lg-5.element-animation
          .intro__content
            h1.intro__title Binghatti Hills
            p.intro__subtitle Баланс активного отдыха и гармонии
            a(href="#" class="button button-primary")
              span Скачать брошюру 

        .col-12.col-lg-auto.ms-auto.element-animation
          form(class=['js-form-validate']).form__block#form-intro
            h2.form__block-title Подайте заявку на бесплатную консультацию
            .row
              .col-12
                +field({
                  type: 'text',
                  placeholder: 'Имя',
                  classes: '',
                  validate: true
                })
              .col-12
                +field({
                  type: 'phone',
                  placeholder: 'Телефон',
                  classes: 'js-phone-mask',
                  validate: true
                })
              .col-12
                +field({
                  type: 'email',
                  placeholder: 'Почта',
                  classes: '',
                })
            .form__block-agreement
              .checkbox
                input(type="checkbox" name="agreement")
                span
                p.mb-0 Я даю согласие на обработку персональных данных в соответствии с #[a(href="#" class="text-danger") Политикой конфиденциальности]

            button(type="submit" class="button button-black")
              span Отправить
              .spinner-border.spinner-form(role='status')

      .intro__installment.element-animation
        +icon('percent')
        p.mb-0 Рассрочка во время строительства 50%