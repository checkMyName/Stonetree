section.section-bg-white.card__layouts

  -
    layoutsSliderElements = [
      {
        title: 'Студии',
        desc: 'Разработка индивидуальной инвестиционной стратегии с целью получения высокого ROI и капитализации объекта',
        href: '#',
      },
      {
        title: '1-комнатные',
        desc: 'Разработка индивидуальной инвестиционной стратегии с целью получения высокого ROI и капитализации объекта',
        href: '#',
      },
      {
        title: '2-комнатные',
        desc: 'Разработка индивидуальной инвестиционной стратегии с целью получения высокого ROI и капитализации объекта',
        href: '#',
      },
    ]

  .container
    h2.title.title-big.title-section.element-animation Планировки
    .swiper.slider.layouts__slider.element-animation.js-card-layouts-slider.js-row
      .swiper-wrapper
        each item, i in layoutsSliderElements
          .swiper-slide
            .layouts__slider-slide
              h3.layouts__slider-slide-title #{item.title}
              .catalog__item-info-table-row.js-catalog-table-row
                p
                  span от 
                  span.js-catalog-table-row-number 35,7 м#[sup 2]
                .catalog__item-info-table-sqrt.js-sqrt
                  .sqrt__button.js-sqrt-button
                    span м#[sup 2]
                    +icon('arrow-down')
                  .d-none.js-sqrt-button-content
                    ul
                      li.js-sqrt-content-item.is-selected(data-value='meters' data-number='35,7 м<sup>2</sup>') м#[sup 2]
                      li.js-sqrt-content-item(data-value='sqarfeet' data-number='726 sq.ft<sup>2</sup>') sq.ft
                  .sqrt__content.js-sqrt-content
              p.catalog__item-info-table-furniture Меблировка: нет
              a(href="#" class="button button-black")
                span Узнать цену 

        //- .sqrt__content.js-sqrt-content

      .slider__pagination
        .slider__pagination-bullet
      .slider__navigation-button.slider__navigation-button-prev
          +icon('arrow-down')
      .slider__navigation-button.slider__navigation-button-next
        +icon('arrow-down')