block mainVariables

doctype html
html(lang='ru')
	head
		meta(charset='UTF-8')
		meta(http-equiv='x-ua-compatible' content="ie=edge")
		meta(name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" )
		meta(name="description" content="Description of the page less than 150 characters")
		title #{pageTitle}
		link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/intl-tel-input@23.1.0/build/css/intlTelInput.css")
		link(rel="stylesheet" href="css/libs.css")
		link(rel="stylesheet" href="css/common.css")
	body

		include ../mixins/icon
		include ../mixins/breadcrumbs
		include ../mixins/title
		include ../mixins/button
		include ../mixins/field
		include ../mixins/lazyImage

		div(
			class=[
				'page',
				pageRootClass && `page--${pageRootClass}`
			]
			id=pageId || 'js-page-regular'
			data-sprite-path='img/'
		)
			div(class='page__wrapper' id='js-page-wrapper')
				div(class='page__content')
					include ../components/header
					main
						template#mask-switcher-item
							div(data-mask='{{_mask}}' data-start-with='{{_start_with}}' data-country='{{name_ru}}' data-country-short='{{cc}}' data-flag='{{country_flag}}.png' class=['mask__switcher-item']).js-mask-switcher-item
								//- img(src="img/flags/{{_cc}}.svg" alt="flag")
								.icon
									+icon('{{_cc}}')
								//- +icon('ad')
								span.country {{name_ru}}
								span.start {{__start_with}}

						block mainContent
				include ../components/footer
		include ../components/modal/form
		include ../components/modal/brochure
		include ../components/modal/gallery

		script(src='js/vendors.js')
		
		script(src='js/main.js')